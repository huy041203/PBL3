    {
        string[] days = { "Ch·ªß nh·∫≠t", "Th·ª© 2", "Th·ª© 3", "Th·ª© 4", "Th·ª© 5", "Th·ª© 6", "Th·ª© 7" };
        return days[(int)date.DayOfWeek];
