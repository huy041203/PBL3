 @model PBL3.Models.ViewModels.LoginViewModel
<div class="modal fade" id="loginModal" tabindex="-1" aria-labelledby="loginModalLabel" aria-hidden="true" data-bs-backdrop="true" data-bs-keyboard="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content" style="background: white; border-radius: 10px; overflow: hidden;">
            <div class="login__container">
                <div class="login__content-left">
                    <div class="login__logo">
                        <img src="~/img/Logo.png" alt="Medicare Clinic Logo" class="loginlogo-image">
                        <h1 class="login__logo-text">
                            <span class="login__logo-text--medicare">MEDICARE</span><br>
                            <span class="loginlogo-text--clinic">CLINIC</span>
                        </h1>
                    </div>
                    <h2 class="logintitle">Đăng nhập</h2>
                    <form asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path" method="post" class="loginform">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        @if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["LoginError"]
                            </div>
                        }
                        <div class="loginform-group">
                            <input asp-for="Username" class="logininput" placeholder="Tên đăng nhập" required>
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>
                        <div class="loginform-group">
                            <input asp-for="Password" class="logininput" placeholder="Mật khẩu" required>
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="loginform-links">
                            <a href="#" class="loginforgot-password">Quên mật khẩu?</a>
                        </div>
                        <button type="submit" class="loginbutton">Đăng nhập</button>
                    </form>
                    <p class="loginregister">
                        Bạn chưa có tài khoản? <a href="#" class="loginregister-link" id="switchToRegister">Đăng ký</a>
                    </p>
                </div>
                <div class="login__content-right">
                    <img src="~/img/Doctor_Banner.png" alt="Doctor" class="loginimage-content">
                </div>
            </div>
        </div>
    </div>
</div>